<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Background animé -->
    <com.example.projetdevmobile.FallingSymbolsView
        android:id="@+id/fallingBackgroundGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:padding="20dp"
            android:elevation="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvPartieNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Partie 1 / 5"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2C3E50"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvJoueurXNom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="❌ Joueur 1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E74C3C"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvScoreX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2C3E50"
                    android:padding="16dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tvJoueurONom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⭕ Joueur 2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#3498DB"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvScoreO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvScoreNul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚪ Nul: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#95A5A6"
                android:padding="8dp"
                android:background="#2C3E50" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:columnCount="3"
                android:rowCount="3"
                android:background="#34495E"
                android:padding="12dp"
                android:elevation="12dp" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>