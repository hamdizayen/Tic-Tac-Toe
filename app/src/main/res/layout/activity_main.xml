                </LinearLayout>

                <!-- Boutons secondaires en grille 2x1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Bouton RÃ¨gles -->
                    <LinearLayout
